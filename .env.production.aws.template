# ================================================
# AWS Production Environment Template
# AWS 배포 시 이 파일을 참고하여 환경변수 설정
# ================================================

# Database (AWS RDS)
DATABASE_URL="postgresql://USERNAME:PASSWORD@YOUR-RDS-ENDPOINT:5432/portlink?schema=public"

# JWT (강력한 시크릿 생성: openssl rand -base64 64)
JWT_SECRET="YOUR_STRONG_JWT_SECRET_HERE"
JWT_EXPIRES_IN="1d"

# Redis (AWS ElastiCache)
REDIS_HOST="YOUR-ELASTICACHE-ENDPOINT"
REDIS_PORT=6379

# AWS S3
AWS_REGION="ap-northeast-2"
AWS_ACCESS_KEY_ID="YOUR_AWS_ACCESS_KEY"
AWS_SECRET_ACCESS_KEY="YOUR_AWS_SECRET_KEY"
AWS_S3_BUCKET="portlink-uploads"

# Application
PORT=3001
NODE_ENV="production"

# OpenAI API
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"
OPENAI_MODEL="gpt-4o-mini"

# GitHub OAuth (프로덕션용 - GitHub Developer Settings에서 새로 생성)
# Homepage URL: https://your-domain.com
# Callback URL: https://your-domain.com/api/v1/github/callback
GITHUB_CLIENT_ID="YOUR_PRODUCTION_GITHUB_CLIENT_ID"
GITHUB_CLIENT_SECRET="YOUR_PRODUCTION_GITHUB_CLIENT_SECRET"
GITHUB_REDIRECT_URI="https://your-domain.com/api/v1/github/callback"

# Frontend URL
FRONTEND_URL="https://your-domain.com"

# SMTP (AWS SES 또는 다른 서비스)
SMTP_HOST="email-smtp.ap-northeast-2.amazonaws.com"
SMTP_PORT=587
SMTP_USER="YOUR_SES_SMTP_USER"
SMTP_PASSWORD="YOUR_SES_SMTP_PASSWORD"
EMAIL_FROM="noreply@your-domain.com"

# Security
THROTTLE_LIMIT=100
CORS_ORIGIN="https://your-domain.com"

# Logging
LOG_LEVEL="warn"
